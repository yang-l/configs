{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "deny": [
      "Bash(git push:*)",
      "Bash(rm -rf:*)",
      "Read(~/.ejson/**)",
      "Read(~/.ssh/**)"
    ]
  },
  "model": "opus[1m]",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cat ~/.claude/CLAUDE.md > /dev/null 2>&1"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
